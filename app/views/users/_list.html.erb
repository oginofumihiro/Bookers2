<h2>User info</h2>
 <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

 <%= user.name %>
 <%= user.introduction %>
 <%= link_to "edit",  edit_user_path(user) %>


<h1>New book</h1>

<%= form_with model:book, local:true do |f| %>

  <label>Title</label>
  <%= f.text_field :title %>

  <h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>

<% end %>