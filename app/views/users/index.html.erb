<div class="container">
  <div class="row">
    <div class="col-md-3">

<%= render 'users/list', user: @user, book: @book %>
<p id="notice"><%= notice %></p>

</div>

  <div class="col-md-8 offset-md-1">
      <h1>Users</h1>
        <table>
         <thead>
          <tr>
            <th>
              image
            </th>
            <th>
              name
            </th>
            <th colspan="3"></th>
          </tr>
          </thead>
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td>
                <%= user.profile_image_id %>
                 <%= attachment_image_tag user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>
              </td>
              <td><%= user.name %></td>
              <td>
              <%= link_to "Show",  new_user_registration_url %>
              </td>
            </tr>
        <% end %>
        </tbody>
        </table>
</div>
</div>
</div>