<body>
<header>
  <span>Bookers</span>
  <i class="fas fa-home">Home</i>
  <i class="fas fa-users">Users</i>
  <i class="fas fa-book-open">Books</i>
  <i class="fas fa-sign-out-alt">
    <%= link_to "log out", destroy_user_session_path, method: :delete %>
  </i>
</header>

<div class="container">
  <div class="row">
    <div class="col-md-3">

  <p id="notice"><%= notice %></p>

  </div>

  <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
    <table>
     <thead>
      <tr>
        <th>
        Title
        </th>
      <th>
        Opinion
      </th>
      <th colspan="3"></th>
    </tr>
      </thead>
      <tbody>
        <% @user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
</div>
</div>
<%= render 'users/list', user: @user, book: @book %>
</body>