<div class="container">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg"%>

        <%= @user.name %>
        <%= @user.introduction %>
        <%= link_to "edit",  edit_user_path(@user) %>


      <h1>New book</h1>

        <%= form_with model:@book, local:true do |f| %>

          <label>Title</label>
            <%= f.text_field :title %>

          <h4>Opinion</h4>
            <%= f.text_area :body %>

            <%= f.submit 'Create Book' %>

        <% end %>

        <p id="notice"><%= notice %></p>

    </div>


<div class="col-md-8 offset-md-1">
<h1>Books</h1>
<table>
<thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Opinion
      </th>
      <th colspan="3"></th>
    </tr>
  </thead>
<tbody>
    <% @user.books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
</div>